{
  "name": "hardhat-storage-layout-json",
  "version": "0.0.1",
  "description": "Hardhat TS plugin to generate a json file describing the storage layout of contracts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tfxq/hardhat-storage-layout-json.git"
  },
  "author": "3obby",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "keywords": [
    "ethereum",
    "smart-contracts",
    "hardhat",
    "hardhat-plugin",
    "storage",
    "namespace",
    "hash",
    "keccak256"
  ],
  "scripts": {
    "lint:fix": "prettier --write 'src/**/*.{js,ts}' 'test/**/*.{js,ts}' && tslint --fix --config tslint.json --project tsconfig.json",
    "lint": "tslint --config tslint.json --project tsconfig.json",
    "test": "mocha --exit --recursive 'test/**/*.test.ts'",
    "build": "tsc",
    "watch": "tsc -w",
    "prepublishOnly": "npm run build"
  },
  "files": [
    "dist/",
    "src/",
    "LICENSE",
    "README.md"
  ],
  "dependencies": {
    "console-table-printer": "^2.9.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/fs-extra": "^5.0.4",
    "@types/mocha": "^5.2.6",
    "@types/node": "^8.10.38",
    "chai": "^4.2.0",
    "hardhat": "^2.0.0",
    "mocha": "^7.1.2",
    "prettier": "2.0.5",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^5.1.6"
  },
  "peerDependencies": {
    "hardhat": "^2.15.0"
  },
  "bugs": {
    "url": "https://github.com/tfxq/hardhat-storage-layout-json/issues"
  },
  "homepage": "https://github.com/tfxq/hardhat-storage-layout-json#readme",
  "directories": {
    "test": "test"
  }
}
